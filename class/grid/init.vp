(import 'inc/func.inc)
(import 'class/class_grid.inc)

(def-func 'class/grid/init)
	;inputs
	;r0 = grid object
	;r1 = vtable pointer
	;outputs
	;r1 = 0 if error, else ok

	;init parent
	(s-call 'grid 'init '(r0, r1) '(r1))
	(vpif '(r1 != 0))
		;init myself
		(vp-cpy-cr 1 r1)
		(vp-cpy-ri r1 r0 grid_width)
		(vp-cpy-ri r1 r0 grid_height)
	(endif)
	(vp-ret)

(def-func-end)
