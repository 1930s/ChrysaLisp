(import 'sys/func.inc)
(import 'class/grid/grid.inc)
(import 'class/lisp/lisp.inc)

(def-func 'class/lisp/ui_grid)
	;inputs
	;r0 = lisp object
	;r1 = args
	;outputs
	;r0 = lisp object
	;r1 = value

	(ptr 'this 'args 'value)
	(uint 'length)

	(push-scope)
	(f-entry 'lisp 'ui_grid {this, args})

(errorcases
	(v-call 'vector 'get_length {args} {_, length})
	(errorif {length} 'error1))

	(f-call 'grid 'create {} {value})

(vp-label 'exit)
	(f-exit 'lisp 'ui_grid {this, value})
	(return)

(errorcases
(vp-label 'error1)
	(f-call 'lisp 'repl_error {this, "(ui-grid)", error_msg_wrong_types, args} {_, value})
	(goto 'exit))

	(pop-scope-syms)

(def-func-end)
