(import 'sys/func.inc)
(import 'class/lisp/class.inc)

(def-method 'lisp 'func_catch)
	;inputs
	;r0 = lisp object (ptr)
	;r1 = args vector object (ptr)
	;outputs
	;r0 = lisp object (ptr)
	;r1 = return value object (ptr)

	(ptr 'this 'args 'value)
	(pptr 'iter_begin)
(errorcases
	(uint 'length))

	(push-scope)
	(f-entry 'lisp 'func_catch {this, args})

(errorcases
	(v-call 'vector 'get_length {args} {_, length})
	(errorif {length != 3} 'error1))

	(f-call 'vector 'get_begin {args} {_, iter_begin})
	(f-call 'lisp 'repl_eval {this, iter_begin[ptr_size * 1]} {_, value})
	(vpif (cat {value->obj_vtable == @} (f-path 'error 'vtable)))
		(f-call 'lisp 'repl_eval {this, iter_begin[ptr_size * 2]} {_, args})
		(vpif (cat {args->obj_vtable == @} (f-path 'error 'vtable)))
			(f-call 'obj 'deref {value})
			(assign {args} {value})
		(elseif {args != this->lisp_sym_nil})
			(f-call 'obj 'deref {value})
			(assign {args} {value})
		(else)
			(f-call 'obj 'deref {args})
		(endif)
	(endif)

(vp-label 'exit)
	(f-exit 'lisp 'func_catch {this, value})
	(return)

(errorcases
(vp-label 'error1)
	(f-call 'lisp 'repl_error {this, "(catch form eform)", error_msg_wrong_num_of_args, args} {_, value})
	(goto 'exit))

	(pop-scope-syms)

(def-func-end)
