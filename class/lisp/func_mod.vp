(import 'inc/func.inc)
(import 'class/vector/vector.inc)
(import 'class/boxed_long/boxed_long.inc)
(import 'class/lisp/lisp.inc)

(def-func 'class/lisp/func_mod)
	;inputs
	;r0 = lisp object
	;r1 = args
	;outputs
	;r0 = lisp object
	;r1 = value

	(ptr 'this 'args 'value)
	(pptr 'iter_start 'iter_end)
	(union '(long 'accum 'num) '(uint 'length))

	(push-scope)
	(f-entry 'lisp 'func_mod {this, args})

	(d-call 'vector 'get_length {args} {_, length})
	(errorif {length < 2} 'error1)
	(f-call 'vector 'get_element {args, 0} {_, value})
	(f-call 'vector 'get_iter {args, 1} {_, iter_start})
	(f-call 'vector 'get_iter {args, length} {_, iter_end})
	(errorif (cat {value->obj_vtable != @} (f-path 'class 'boxed_long)) 'error2)
	(f-call 'boxed_long 'get_value {value} {accum})
	(loop-start)
		(assign {*iter_start} {value})
		(errorif (cat {value->obj_vtable != @} (f-path 'class 'boxed_long)) 'error2)
		(f-call 'boxed_long 'get_value {value} {num})
		(assign {accum %% num} {accum})
		(assign {iter_start + ptr_size} {iter_start})
	(loop-until {iter_start == iter_end})
	(f-call 'boxed_long 'create {} {value})
	(f-call 'boxed_long 'set_value {value, accum})

(vp-label 'exit)
	(f-exit 'lisp 'func_mod {this, value})
	(return)

(errorcases
(vp-label 'error1)
	(assign {"(mod val val ...) not enough args"} {value})
	(goto 'error)
(vp-label 'error2)
	(assign {"(mod val val ...) not all numbers"} {value})
(vp-label 'error)
	(f-call 'lisp 'repl_error {this, value, args} {_, value})
	(goto 'exit))

	(pop-scope-syms)

(def-func-end)
