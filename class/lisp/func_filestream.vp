(import 'inc/func.inc)
(import 'class/vector/vector.inc)
(import 'class/stream_str/stream_str.inc)
(import 'class/string/string.inc)
(import 'class/symbol/symbol.inc)
(import 'class/lisp/lisp.inc)

(def-func 'class/lisp/func_filestream)
	;inputs
	;r0 = lisp object
	;r1 = args
	;outputs
	;r0 = lisp object
	;r1 = value

	(ptr 'this 'args 'name 'value)
	(uint 'length)

	(push-scope)
	(f-entry 'lisp 'func_filestream {this, args})

	(d-call 'vector 'get_length {args} {_, length})
	(errorif {length != 1} 'error1)
	(f-call 'vector 'get_element {args, 0} {_, name})

(errorcases
	(f-call 'obj 'inst_of (cat {name, @} (f-path 'class 'string)) {_, value})
	(errorifnot {value} 'error2))

	(f-call 'string 'create_from_file {&name->string_data} {value})
	(vpif {value})
		(f-call 'stream_str 'create {value} {value})
	(else)
		(assign {this->lisp_sym_nil} {value})
		(f-call 'ref 'ref {value})
	(endif)

(vp-label 'exit)
	(f-exit 'lisp 'func_filestream {this, value})
	(return)

(errorcases
(vp-label 'error2)
	(assign {"(file-stream filename) filename not a filename"} {value})
	(goto 'error)
(vp-label 'error1)
	(assign {"(file-stream filename) not enough args"} {value})
(vp-label 'error)
	(f-call 'lisp 'repl_error {this, value, 0, args} {_, value})
	(goto 'exit))

	(pop-scope-syms)

(def-func-end)
