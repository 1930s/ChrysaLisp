(import 'inc/func.inc)
(import 'class/class_vector.inc)
(import 'class/class_stream_str.inc)
(import 'class/class_string.inc)
(import 'class/class_symbol.inc)
(import 'class/class_error.inc)
(import 'class/class_lisp.inc)

(def-func 'class/lisp/func_filestream)
	;inputs
	;r0 = lisp object
	;r1 = args
	;outputs
	;r0 = lisp object
	;r1 = value

	(ptr 'this 'args 'value)
	(ulong 'length)

	(push-scope)
	(retire '(r0 r1) {this, args})

	(devirt-call 'vector 'get_length {args} {length})
	(vpif {length == 1})
		(func-call 'vector 'get_element {args, 0} {value})
		(vpif {value -> obj_vtable == @class/class_string || value -> obj_vtable == @class/class_symbol})
			(func-call 'string 'create_from_file {& value -> string_data} {value})
			(vpif {value})
				(func-call 'stream_str 'create {value} {value})
			(else)
				(func-call 'error 'create {"(file-stream filename) filename not found", args} {value})
			(endif)
		(else)
			(func-call 'error 'create {"(file-stream filename) filename not a filename", args} {value})
		(endif)
	(else)
		(func-call 'error 'create {"(file-stream filename) not enough args", args} {value})
	(endif)

	(expr {this, value} '(r0 r1))
	(pop-scope)
	(return)

(def-func-end)
