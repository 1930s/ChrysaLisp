(import 'inc/func.inc)
(import 'inc/load.inc)
(import 'class/class_string.inc)
(import 'class/class_stream.inc)
(import 'class/class_lisp.inc)

(def-func 'class/lisp/repl_read_str)
	;inputs
	;r0 = lisp object
	;r1 = stream
	;r2 = next char
	;outputs
	;r0 = lisp object
	;r1 = string
	;r2 = next char

	(const 'char_double_quote 34)

	(ptr 'this 'stream 'string)
	(pubyte 'reloc 'buffer)
	(ulong 'char)

	(push-scope)
	(retire '(r0 r1 r2) {this, stream, char})

	(func-path 'sys_load 'statics)
	(assign {@_function_.ld_statics_reloc_buffer} {reloc})
	(assign {reloc} {buffer})

	(func-call 'stream 'read_char {stream} {char})
	(loop-while {char != -1 && char != char_double_quote})
		(assign {char} {* buffer})
		(assign {buffer + 1} {buffer})
		(func-call 'stream 'read_char {stream} {char})
	(loop-end)
	(func-call 'stream 'read_char {stream} {char})

	(func-call 'string 'create_from_buffer {reloc, buffer - reloc} {string})

	(expr {this, string, char} '(r0 r1 r2))
	(pop-scope)
	(return)

(def-func-end)
