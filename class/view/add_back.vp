(import 'inc/func.inc)
(import 'class/class_view.inc)

(def-func 'class/view/add_back)
	;inputs
	;r0 = view object
	;r1 = parent view object
	;trashes
	;r1-r3

	;remove from any existing parent
	(vp-cpy-rr r1 r3)
	f_call view, sub, {r0}

	;add to parent
	(vp-cpy-ri r3 r0 view_parent)
	(vp-add-cr view_list r3)
	(vp-lea r0 view_node r2)
	lh_add_at_tail r3, r2, r1
	(vp-ret)

(def-func-end)
