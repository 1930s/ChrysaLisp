(import 'inc/func.inc)
(import 'class/class_view.inc)

(def-func 'class/view/get_relative)
	;inputs
	;r0 = view object
	;r1 = ansestor view object
	;r8 = view x
	;r9 = view y
	;outputs
	;r8 = relative x
	;r9 = relative y
	;trashes
	;r2

	;walk up tree to parent
	(vp-cpy-rr r0 r2)
	(loop-while '(r2 != r1))
		(vp-add-ir r2 view_x r8)
		(vp-add-ir r2 view_y r9)
		(vp-cpy-ir r2 view_parent r2)
		(assert '(r2, !=, 0))
	(loop-end)
	(vp-ret)

(def-func-end)
