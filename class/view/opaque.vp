(import 'inc/func.inc)
(import 'class/class_view.inc)

(def-func 'class/view/opaque)
	;inputs
	;r0 = view object
	;trashes
	;all but r0, r4

	;remove any opaque region
	(f-call 'view 'sub_opaque '(r0, -1000000, -1000000, 2000000, 2000000))

	;paste opaque region
	(f-jmp 'view 'add_opaque '(r0, 0, 0, [r0 + view_w], [r0 + view_h]))

(def-func-end)
