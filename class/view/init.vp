(import 'inc/func.inc)
(import 'class/class_view.inc)

(def-func 'class/view/init)
	;inputs
	;r0 = object
	;r1 = vtable pointer
	;outputs
	;r1 = 0 if error, else ok

	;init parent
	s_call view, init, {r0, r1}, {r1}
	if r1, !=, 0
		;init myself
		(vp-cpy-cr view_flag_solid r1)
		(vp-cpy-ri r1 r0 view_flags)
		(vp-xor-rr r1 r1)
		(vp-cpy-ri r1 r0 view_parent)
		(vp-lea-ir r0 view_list r1)
		(lh-init r1 r2)
	endif
	(vp-ret)

(def-func-end)
