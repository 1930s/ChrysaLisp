	(vp-cpy-ri r2 r4 local_down)
	(vp-cpy-ri r3 r4 local_up)
	(vp-cpy-rr r0 r1)
	(loop-start)
	(vp-label 'down_loop_ctx)
		(vp-cpy-rr r1 r0)

		;down callback
