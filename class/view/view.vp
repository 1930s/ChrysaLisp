(def-func 'class/view/sub)
	;inputs
	;r0 = object
	;trashes
	;r1-r2

	;test parent
	(vp-cpy-ir r0 view_parent r1)
	(vpif '(r1 != 0))
		;clear parent field
		(vp-xor-rr r2 r2)
		(vp-cpy-ri r2 r0 view_parent)

		;remove from parent list
		(vp-lea-i r0 view_node r2)
		(ln-remove-node r2 r1)
	(endif)
	(vp-ret)

(def-func-end)

(def-func 'class/view/sub_opaque)
	;inputs
	;r0 = view object
	;r8 = x
	;r9 = y
	;r10 = width
	;r11 = height
	;trashes
	;all but r0, r4

	(def-struct 'local)
		(ptr 'this)
	(def-struct-end)

	;save inputs
	(vp-sub-cr local_size r4)
	(assign '(r0) '((r4 local_this)))

	;cut opaque region
