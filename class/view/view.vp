(def-func 'class/view/forward_tree)
	;inputs
	;r0 = view object
	;r1 = user data pointer
	;r2 = down callback
	;r3 = up callback
	;outputs
	;r0 = view object
	;trashes
	;dependant on callbacks
		;callback api
		;inputs
		;r0 = view object
		;r1 = user data pointer
		;outputs
		;r0 = view object
		;r1 = 0 if should not decend after down callback

	(def-struct 'local)
		(ptr 'this)
		(ptr 'data)
