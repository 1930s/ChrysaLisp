(import 'inc/func.inc)
(import 'class/class_ref.inc)

(def-func 'class/ref/deref)
	;inputs
	;r0 = object
	;trashes
	;all but r4

	;dec ref count
	(vp-cpy-ir r0 ref_count r1)
	(vp-dec r1)
	(vp-cpy-ri r1 r0 ref_count)

	;destroy if 0
	(vpif '(r1 == 0))
		(f-jmp 'ref 'destroy '(r0))
	(endif)
	(vp-ret)

(def-func-end)
