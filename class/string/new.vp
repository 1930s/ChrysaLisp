(import 'inc/func.inc)
(import 'class/class_string.inc)

(def-func 'class/string/new)
	;inputs
	;r0 = object size
	;outputs
	;r0 = 0 if error, else object
	;trashes
	;r1-r3, r5

	;allocate new string object
	(vp-cpy-rr r0 r5)
	(f-call 'sys_mem 'alloc '(r0) '(r0 _))
	(vpif '(r0 != 0))
		;clear object memory
		(vp-cpy-rr r0 r3)
		(f-call 'sys_mem 'clear '(r0 r5) '(_))
		(vp-cpy-rr r3 r0)
	(endif)
	(vp-ret)

(def-func-end)
