(import 'inc/func.inc)
(import 'class/class_string.inc)

(def-func 'class/string/slice)
	;inputs
	;r0 = string object
	;r1 = start index
	;r2 = end index
	;outputs
	;r0 = string object
	;r1 = string slice
	;trashes
	;r2-r3, r5-r7

	(vp-push r0)
	(vp-sub-rr r1 r2)
	(vp-add-cr string_data r0)
	(vp-add-rr r1 r0)
	(f-call 'string 'create_from_buffer '(r0, r2) '(r1))
	(vp-pop r0)
	(vp-ret)

(def-func-end)
