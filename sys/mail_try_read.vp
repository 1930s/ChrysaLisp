(import 'inc/func.inc)
(import 'inc/task.inc)

(def-func 'sys/mail_try_read)
	;inputs
	;r0 = mailbox address
	;outputs
	;r0 = 0, else mail address
	;trashes
	;r1-r2

	(lh-get-head r0 r0)
	(vp-cpy-rr r0 r1)
	(ln-get-succ r0 r0)
	(vpif '(r0 != 0))
		(vp-cpy-rr r1 r0)
		(ln-remove-node r1 r2)
	(endif)
	(vp-ret)

(def-func-end)
