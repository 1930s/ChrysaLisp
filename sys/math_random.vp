(import 'inc/func.inc)
(import 'inc/task.inc)

(def-func 'sys/math_random)
	;inputs
	;r0 = random range
	;outputs
	;r0 = random number in range
	;trashes
	;r1-r2

	(vp-cpy-rr r0 r1)
	vp_cpy_rel seed, r0
	(vp-mul-cr 17 r0)
	(vp-cpy-cr 0xa5a5a5a5a5a5a5a5 r2)
	(vp-xor-rr r2 r0)
	vp_cpy_rel r0, seed
	(vp-xor-rr r2 r2)
	(vp-div r1 r2 r0)
	(vp-cpy-rr r2 r0)
	(vp-ret)

	(vp-align ptr_size)
(vp-label 'seed)
	(vp-long 1234567890)

(def-func-end)
