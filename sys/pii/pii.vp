(def-func 'sys/pii/open)
	;inputs
	;r0 = filename
	;r1 = mode
	;r2 = flags
	;outputs
	;r0 = fd
	;trashes
	;none

	(f-entry 'pii 'open '(r0 r1 r2))
	(vp-push r1 r2 r5 r6 r7 r8 r9 r10)

	(sys-open '(r0 r1 r2) '(r0))

	(vp-pop r1 r2 r5 r6 r7 r8 r9 r10)
	(f-exit 'pii 'open '(r0))
	(vp-ret)

(def-func-end)

