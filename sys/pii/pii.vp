(def-func 'sys/pii/debug_long)
	;inputs
	;r0 = info string
	;r1 = debug string
	;r2 = debug int
	;trashes
	;none

	(def-struct 'local)
		(ptr 'info)
		(ptr 'string)
		(long 'long)
	(def-struct-end)

	;save inputs
	(f-entry 'pii 'debug_long '(r0 r1 r2))
	(vp-push r5 r6 r7 r8 r9 r10 r2 r1 r0)

	(f-call 'pii 'string '(2 (rsp local_info)))
	(f-call 'pii 'char '(2 (code " ")))
	(f-call 'pii 'string '(2 (rsp local_string)))
	(f-call 'pii 'string '(2 " :-> 0x"))
	(f-call 'pii 'number '(2 (rsp local_long) 16))
	(f-call 'pii 'char '(2 char_lf))

	(vp-push r5 r6 r7 r8 r9 r10 r2 r1 r0)
	(vp-ret)

(def-func-end)

