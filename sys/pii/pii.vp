(def-func 'sys/pii/age)
	;inputs
	;r0 = function name
	;outputs
	;r0 = 0 if error, else modified date
	;trashes
	;none

	(f-entry 'pii 'age '(r0))
	(vp-push r1 r2 r5 r6 r7 r8 r9 r10)

	;get file data
	(f-bind 'sys_load 'statics r1)
	(vp-cpy-ir r1 ld_statics_stat_buffer r1)
	(sys-stat '(r0 r1) '(r0))
	(vpif '(r0 != 0))
		(vp-xor-rr r0 r0)
	(else)
		(f-bind 'sys_load 'statics r1)
		(vp-cpy-ir r1 ld_statics_stat_buffer r1)
		(vp-cpy-ir r1 stat_mtime r0)
	(endif)

	(vp-pop r1 r2 r5 r6 r7 r8 r9 r10)
	(f-exit 'pii 'age '(r0))
	(vp-ret)

(def-func-end)

(def-func 'sys/pii/time)
	;outputs
	;r0 = time in usec
	;trashes
	;none

	;calculate wake time
	(vp-push r1 r2 r5 r6 r7 r8 r9 r10)

	(vp-alloc timeval_size)
	(sys-gettimeofday '(rsp 0))
	(vp-cpy-ir rsp timeval_sec r0)
	(vp-mul-cr 1000000 r0)
	(vp-cpy-ir rsp timeval_usec r1)
	(vp-add-rr r1 r0)
	(vp-free timeval_size)

	(vp-pop r1 r2 r5 r6 r7 r8 r9 r10)
	(f-exit 'pii 'time '(r0))
	(vp-ret)

(def-func-end)
