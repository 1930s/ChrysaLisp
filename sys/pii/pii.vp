(def-func 'sys/pii/write_num)
	;inputs
	;r0 = fd
	;r1 = number
	;r2 = base
	;outputs
	;r0 = error code
	;trashes
	;none

	(f-entry 'pii 'write_num '(r0 r1 r2))
	(sys-push-trashed)

	(vp-cpy-rr r2 r3)
	(vp-swp-rr r0 r1)
	(vp-cpy-rr rsp r4)	;stack location
	(loop-start)
		(vp-xor-rr r2 r2)
		(vp-div-rrr r3 r2 r0)
		(vp-push r2)
	(loop-until '(r0 == 0))
	(loop-start)
		(vp-pop r0)
		(vp-add-cr (code "0") r0)
		(vpif '(r0 > (code "9")))
			(vp-add-cr (sub (code "A") (code ":")) r0)
		(endif)
		(vp-push r1)
		(sys-write-char '(r1 r0) '(_))
		(vp-pop r1)
	(loop-until '(rsp == r4))

	(sys-pop-trashed)
	(vp-ret)

(def-func-end)

