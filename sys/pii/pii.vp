(def-func 'sys/pii/open)
	;inputs
	;r0 = filename
	;r1 = mode
	;r2 = flags
	;outputs
	;r0 = fd
	;trashes
	;none

	(f-entry 'pii 'open '(r0 r1 r2))
	(sys-push-trashed)

	(sys-open '(r0 r1 r2) '(r0))

	(sys-pop-trashed)
	(f-exit 'pii 'open '(r0))
	(vp-ret)

(def-func-end)

