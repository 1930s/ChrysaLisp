(def-method 'sys_pii 'write_str)
	;inputs
	;r0 = fd (ulong)
	;r1 = c string (pubyte)
	;outputs
	;r0 = error code (ulong)
	;trashes
	;none

	(entry 'sys_pii 'write_str '(r0 r1))
	(sys-push-trashed r1 r3)
	(vp-cpy-rr r0 r3)
	(call 'sys_string 'length '(r1) '(r0 r1))
	(sys-write '(r3 r0 r1) '(r0))
	(sys-pop-trashed r1 r3)
	(exit 'sys_pii 'write_str '(r0))
	(vp-ret)

(def-func-end)

(def-method 'sys_pii 'age)
	;inputs
	;r0 = c string file name (pubyte)
	;outputs
	;r0 = 0 if error, else modified date (ulong)
	;trashes
	;none

	(entry 'sys_pii 'age '(r0))
	(sys-push-trashed r1)
	(f-bind 'sys_load 'statics r1)
	(vp-cpy-ir r1 ld_statics_stat_buffer r1)
	(sys-stat '(r0 r1) '(r0))
	(vpif '(r0 != 0))
		(vp-xor-rr r0 r0)
	(else)
		(f-bind 'sys_load 'statics r1)
		(vp-cpy-ir r1 ld_statics_stat_buffer r1)
		(vp-cpy-ir r1 stat_mtime r0)
	(endif)
	(sys-pop-trashed r1)
	(exit 'sys_pii 'age '(r0))
	(vp-ret)

(def-func-end)

(def-method 'sys_pii 'time)
	;outputs
	;r0 = time in usec (ulong)
	;trashes
	;none

	(sys-push-trashed r1)
	(vp-alloc timeval_size)
	(sys-gettimeofday '(rsp 0))
	(vp-cpy-ir rsp timeval_sec r0)
	(vp-mul-cr 1000000 r0)
	(vp-cpy-ir rsp timeval_usec r1)
	(vp-add-rr r1 r0)
	(vp-free timeval_size)
	(sys-pop-trashed r1)
	(exit 'sys_pii 'time '(r0))
	(vp-ret)

(def-func-end)

