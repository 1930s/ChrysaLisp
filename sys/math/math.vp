(def-func 'sys/math/intersect)
	;inputs
	;r0 = 16.16/16.16 p1.xy
	;r1 = 16.16/16.16 v1.xy
	;r2 = 16.16/16.16 p2.xy
	;r3 = 16.16/16.16 v2.xy
	;outputs
	;r0 = 16.16/16.16 i.xy
	;trashes
	;all

	(union
		'(ulong 'p1 'v1 'p2 'v2)
		'(int 'p1x 'p1y 'v1x 'v1y 'p2x 'p2y 'v2x 'v2y))
	(long 'axb 'da 'db)

	(push-scope)
	(f-entry 'math 'intersect {p1, v1, p2, v2})

	(vec-set 0)
	(vec-load 2 {p2x, p2y} {v2x, v2y})
	(vec-add 2)
	(vec-load 2 {p2x, p2y})
	(vec-fdet 2)
	(vec-store 1 {db})

	(vec-load 2 {p1x, p1y} {v1x, v1y})
	(vec-add 2)
	(vec-load 2 {p1x, p1y})
	(vec-fdet 2)
	(vec-store 1 {da})

	(vec-load 2 {v1x, v1y} {v2x, v2y})
	(vec-fdet 2)
	(vec-store 1 {axb})
	(vpif {axb})
		(vec-load 2 {da, v1x} {db, v2x})
		(vec-fdet 2)
		(vec-load 2 {da, v1y} {db, v2y})
		(vec-fdet 2)
		(vec-load 1 {axb})
		(vec-dup 1)
		(vec-fdiv 2)
		(vec-store 2 {p1x, p1y})
	(else)
		(vec-load 2 {p2x, p2y})
		(vec-load 2 {p1x, p1y})
		(vec-add 2)
		(vec-load 1 {0.5})
		(vec-fscale 2)
		(vec-store 2 {p1x, p1y})
	(endif)

	(f-exit 'math 'intersect {p1})
	(pop-scope)
	(return)

(def-func-end)

(def-func 'sys/math/distance_sqd)
	;inputs
	;r0 = 16.16/16.16 p.xy
	;r1 = 16.16/16.16 p1.xy
	;r2 = 16.16/16.16 p2.xy
	;outputs
	;r0 = 16.16 distance squared
	;trashes
	;all

	(union
		'(ulong 'p 'p1 'p2)
		'(int 'px 'py 'p1x 'p1y 'p2x 'p2y))

	(push-scope)
	(f-entry 'math 'distance_sqd {p, p1, p2})

	(vec-set 0)
	(vec-load 2 {px, py} {p1x, p1y})
	(defq p1 (vec-top 2))
	(vec-load 2 {p2x, p2y})
	(defq p2 (vec-top 2))
	(vec-dup 2)
	(vec-sub 2 p1)
	(defq lv (vec-top 2))
	(vec-over 2 6)
	(vec-sub 2 p1)
	(vec-fdot 2 lv)
	(bind '(c1) (vec-top 1))
	(vpif `(,c1 > 0))
		(vec-over 2 1)
		(vec-fdot 2 lv)
		(bind '(c2) (vec-top 1))
		(vpif `(,c2 <= ,c1))
			(vec-cpy 2 p2 p1)
		(else)
			(vec-fdiv 1)
			(vec-fscale 2)
			(vec-add 2 lv p1)
		(endif)
	(endif)
	(vec-set 4)
	(vec-fdistance-squared 2)

	(f-exit 'math 'distance_sqd (vec-pop 1))
	(pop-scope)
	(return)

(def-func-end)
