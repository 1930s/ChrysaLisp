(import 'sys/func.inc)
(import 'sys/task.inc)
(import 'sys/syscall.inc)

(def-func 'sys/cpu_get_id)
	;outputs
	;r0 = cpu ID

	(f-bind 'sys_task 'statics r0)
	(f-exit 'sys_cpu 'id '((r0 tk_statics_cpu_id)))
	(vp-ret)

(def-func-end)

(def-func 'sys/cpu_get_time)
	;outputs
	;r0 = time in usec

	;calculate wake time
	(sys-push-trashed)
	(vp-alloc-stack timeval_size)
	(sys-gettimeofday '(rsp 0))
	(vp-cpy-ir rsp timeval_sec r0)
	(vp-mul-cr 1000000 r0)
	(vp-cpy-ir rsp timeval_usec r1)
	(vp-add-rr r1 r0)
	(vp-free-stack timeval_size)
	(sys-pop-trashed)
	(f-exit 'sys_cpu 'time '(r0))
	(vp-ret)

(def-func-end)

(def-func 'sys/cpu_get_total)
	;outputs
	;r0 = cpu total

	(f-bind 'sys_task 'statics r0)
	(f-exit 'sys_cpu 'total '((r0 tk_statics_cpu_total)))
	(vp-ret)

(def-func-end)
