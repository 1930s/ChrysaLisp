(import 'sys/func.inc)
(import 'sys/task.inc)
(import 'sys/pii/pii.inc)

(def-func 'sys/cpu_get_id)
	;outputs
	;r0 = cpu ID

	(f-bind 'sys_task 'statics r0)
	(f-exit 'sys_cpu 'id '((r0 tk_statics_cpu_id)))
	(vp-ret)

(def-func-end)

(def-func 'sys/cpu_get_total)
	;outputs
	;r0 = cpu total

	(f-bind 'sys_task 'statics r0)
	(f-exit 'sys_cpu 'total '((r0 tk_statics_cpu_total)))
	(vp-ret)

(def-func-end)
