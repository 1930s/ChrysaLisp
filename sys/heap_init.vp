(import 'inc/func.inc)
(import 'inc/heap.inc)

(def-func 'sys/heap_init)
	;inputs
	;r0 = heap
	;r1 = cell size
	;r2 = block size
	;outputs
	;r0 = heap
	;r1 = cell size
	;r2 = block size

	vp_cpy_cl 0, [r0 + hp_heap_free_flist]
	vp_cpy_cl 0, [r0 + hp_heap_block_flist]
	(vp-add-cr ptr_size - 1 r1)
	(vp-and-cr (sub 0 ptr_size) r1)
	(vp-cpy-ri r1 r0 hp_heap_cellsize)
	(vp-cpy-ri r2 r0 hp_heap_blocksize)
	(vp-ret)

(def-func-end)
