(import 'inc/func.inc)
(import 'inc/mail.inc)
(import 'inc/math.inc)

;;;;;;;;;;;
; test code
;;;;;;;;;;;

(def-func 'tests/global_child)

	(ptr 'msg)
	(ulong 'num)

	(push-scope)

	;wait a bit
	(func-call 'sys_math 'random '(1000000) '(num))
	(func-call 'sys_task 'sleep '(num + 1000000))

	;read command
	(func-call 'sys_mail 'mymail '() '(msg))
	(func-call 'sys_mem 'free '(msg))

	(pop-scope)
	(return)

(def-func-end)
