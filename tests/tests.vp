	;open global farm
	(f-call 'kernel 'total {} {total})
	(f-call 'sys_task 'open_global {name, total} {ids})

	;send exit parcels etc
	(assign {total} {cnt})
	(loop-while {cnt})
		(assign {cnt - 1} {cnt})
		(f-call 'array 'get_element {ids, cnt * 2} {_, mbox})
		(continueifnot {mbox})
