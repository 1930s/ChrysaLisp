(import 'inc/func.inc)
(import 'inc/font.inc)

(def-func 'gui/font_init)

	;get font statics
	(f-bind 'gui_font 'statics r1)

	;init font lists
	(vp-xor-rr r0 r0)
	(vp-cpy-ri r0 r1 ft_statics_font_flist)

	;init text image hash slots
	(vp-add-cr ft_statics_text_flists r1)
	(vp-lea-ir r1 ft_buckets_size r2)
	(loop-start)
		(vp-cpy-ri r0 r1)
		(vp-add-cr ptr_size r1)
	loop_until r1, ==, r2
	(vp-ret)

(def-func-end)
