(include 'sys/func.inc)
(include 'gui/grid/class.inc)
(include 'class/lisp/class.inc)

(def-method 'grid 'lisp_create)
	;inputs
	;r0 = lisp object (ptr)
	;r1 = args vector object (ptr)
	;outputs
	;r0 = lisp object (ptr)
	;r1 = return value object (ptr)

	(vp-def (this args value) '(r6 r7))

	(entry 'grid 'lisp_create (list this args))

(errorcases
	(d-call 'vector 'get_length (list args))
	(errorif (list (method-output 'vector 'get_length 1) '!= 0) 'error1))

	(call 'grid 'create nil (list value))

	(exit 'grid 'lisp_create (list this value))
	(vp-ret)

(errorcases
(vp-label 'error1)
	(jump 'lisp 'repl_error (list this "(create-grid)" error_msg_wrong_types args)))

(def-func-end)
