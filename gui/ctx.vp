		(vp-cpy-ri-i r8 r4 (add local_clip_rect sdl_rect_x))
		(vp-cpy-ri-i r9 r4 (add local_clip_rect sdl_rect_y))
		(vp-cpy-ri-i r10 r4 (add local_clip_rect sdl_rect_w))
