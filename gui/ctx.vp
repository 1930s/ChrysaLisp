(def-func 'gui/ctx_brighter)
	;inputs
	;r1 = color
	;inputs
	;r1 = brighter color
	;trashes
	;r2, r3

	(vp-cpy-rr r1 r2)
	(vp-cpy-cr 0xff000000 r3)
	(vp-and-rr r3 r1)
	(vp-and-cr 0x00fefefe r2)
	(vp-shr-cr 1 r2)
	(vp-add-cr 0x00808080 r2)
	(vp-add-rr r2 r1)
	(vp-ret)

(def-func-end)

(def-func 'gui/ctx_darker)
	;inputs
	;r1 = color
	;inputs
	;r1 = darker color
	;trashes
	;r2, r3

	(vp-cpy-rr r1 r2)
	(vp-cpy-cr 0xff000000 r3)
	(vp-and-rr r3 r1)
	(vp-and-cr 0x00fefefe r2)
	(vp-shr-cr 1 r2)
	(vp-add-rr r2 r1)
	(vp-ret)

(def-func-end)

