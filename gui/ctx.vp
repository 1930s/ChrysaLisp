(def-func 'gui/ctx_panel)
	;inputs
	;r0 = ctx object
	;r1 = color
	;r2 = flags
	;r3 = depth
	;r7 = x
	;r8 = y
	;r9 = width
	;r10 = height
	;trashes
	;all rsp

	(def-struct 'local)
		(ptr 'ctx)
		(long 'flags)
		(uint 'color)
		(int 'depth)
		(int 'x)
		(int 'y)
		(int 'w)
		(int 'h)
	(def-struct-end)

	;save inputs
	(vp-alloc local_size)
	(assign '(r0 r1 r2 r3) '((rsp local_ctx) (rsp local_color i) (rsp local_flags) (rsp local_depth i)))
	(assign '(r7 r8 r9 r10) '((rsp local_x i) (rsp local_y i) (rsp local_w i) (rsp local_h i)))

	(vpif '(r2 != 0))
		;fill middle
		(f-call 'gui_ctx 'set_color '(r0 r1))

		(assign '((rsp local_x i) (rsp local_y i) (rsp local_w i) (rsp local_h i) (rsp local_depth i)) '(r7 r8 r9 r10 r11))
		(vp-add-rr r11 r7)
		(vp-add-rr r11 r8)
		(vp-shl-cr 1 r11)
		(vp-sub-rr r11 r9)
		(vp-sub-rr r11 r10)
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r9 r10))
	(endif)

	(vp-cpy-ir-i rsp local_depth r11)
	(vpif '(r11 > 0))
		;brighter color
		(f-call 'gui_ctx 'brighter '((rsp local_color ui)) '(r1))
		(f-call 'gui_ctx 'set_color '((rsp local_ctx) r1))

		;fill left edge and top
		(assign '((rsp local_x i) (rsp local_y i) (rsp local_w i) (rsp local_depth i)) '(r7 r8 r9 r10))
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r9 r10))

		(assign '((rsp local_x i) (rsp local_y i) (rsp local_h i) (rsp local_depth i)) '(r7 r8 r10 r9))
		(vp-add-rr r9 r8)
		(vp-sub-rr r9 r10)
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r9 r10))

		;darker color
		(f-call 'gui_ctx 'darker '((rsp local_color ui)) '(r1))
		(f-call 'gui_ctx 'set_color '((rsp local_ctx) r1))

		;fill bottom edge and right
		(assign '((rsp local_x i) (rsp local_y i) (rsp local_w i) (rsp local_h i) (rsp local_depth i)) '(r7 r8 r9 r10 r11))
		(vp-add-rr r11 r7)
		(vp-sub-rr r11 r9)
		(vp-add-rr r10 r8)
		(vp-sub-rr r11 r8)
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r9 r11))

		(assign '((rsp local_x i) (rsp local_y i) (rsp local_w i) (rsp local_h i) (rsp local_depth i)) '(r7 r8 r9 r10 r11))
		(vp-add-rr r9 r7)
		(vp-sub-rr r11 r7)
		(vp-add-rr r11 r8)
		(vp-sub-rr r11 r10)
		(vp-sub-rr r11 r10)
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r11 r10))
	(else)
		;sunken panel
		(vp-mul-cr -1 r11)
		(vp-cpy-ri-i r11 rsp local_depth)

		;darker color
		(f-call 'gui_ctx 'darker '((rsp local_color ui)) '(r1))
		(f-call 'gui_ctx 'set_color '((rsp local_ctx) r1))

		;fill left edge and top
		(assign '((rsp local_x i) (rsp local_y i) (rsp local_w i) (rsp local_depth i)) '(r7 r8 r9 r10))
		(vp-sub-rr r10 r9)
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r9 r10))

		(assign '((rsp local_x i) (rsp local_y i) (rsp local_h i) (rsp local_depth i)) '(r7 r8 r10 r9))
		(vp-add-rr r9 r8)
		(vp-sub-rr r9 r10)
		(vp-sub-rr r9 r10)
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r9 r10))

		;brighter color
		(f-call 'gui_ctx 'brighter '((rsp local_color ui)) '(r1))
		(f-call 'gui_ctx 'set_color '((rsp local_ctx) r1))

		;fill bottom edge and right
		(assign '((rsp local_x i) (rsp local_y i) (rsp local_w i) (rsp local_h i) (rsp local_depth i)) '(r7 r8 r9 r10 r11))
		(vp-add-rr r10 r8)
		(vp-sub-rr r11 r8)
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r9 r11))

		(assign '((rsp local_x i) (rsp local_y i) (rsp local_w i) (rsp local_h i) (rsp local_depth i)) '(r7 r8 r9 r10 r11))
		(vp-add-rr r9 r7)
		(vp-sub-rr r11 r7)
		(vp-sub-rr r11 r10)
		(f-call 'gui_ctx 'filled_box '((rsp local_ctx) r7 r8 r11 r10))
	(endif)

	(vp-free local_size)
	(vp-ret)

(def-func-end)

(def-func 'gui/ctx_set_color)
	;inputs
	;r0 = ctx
	;r1 = color
	;trashes
	;all but rsp

	(def-struct 'local)
		(ptr 'old_stack)
	(def-struct-end)

	;align stack to 16 bytes for SDl
	(vp-cpy-rr rsp r14)
	(vp-alloc local_size)
	(vp-and-cr -16 rsp)
	(vp-cpy-ri r14 rsp local_old_stack)

	(vp-cpy-rr r1 r7)
	(vp-cpy-rr r1 r8)
	(vp-cpy-rr r1 r9)
	(vp-cpy-rr r1 r10)
	(vp-shr-cr 24 r10)
	(vp-shr-cr 16 r7)
	(vp-shr-cr 8 r8)
	(vp-and-cr 0xff r7)
	(vp-and-cr 0xff r8)
	(vp-and-cr 0xff r9)
	(vp-and-cr 0xff r10)
	(sdl-set-render-draw-color '((r0 gui_ctx_sdl_ctx) r7 r8 r9 r10))

	(vp-cpy-ir rsp local_old_stack rsp)
	(vp-ret)

(def-func-end)
